{
    "name": "NodeRedMcuHelper",
    "description": "My Extension",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "declarativeContent",
        "webNavigation",
        "tabs"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "html/popup.html",
	    "default_icon": {
            "19": "icons/icon19.png",
            "38": "icons/icon38.png"
        }
    } ,
    "background": {
            "service_worker": "/js/background.js"
    }
}